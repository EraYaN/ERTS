<Window x:Class="ERTS.Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:ERTS.Dashboard.Utility"
        xmlns:viewmodel="clr-namespace:ERTS.Dashboard.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" PreviewKeyDown="Window_PreviewKeyDown" ResizeMode="NoResize" Initialized="Window_Initialized">
    <Window.Resources>
        <utility:DeviceInstanceToStringConverter x:Key="deviceInstanceToStringConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Menu HorizontalAlignment="Stretch" Height="23" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <MenuItem Header="Tools" Height="23">
                <MenuItem Header="Settings..." Name="SettingsMenuItem" Click="SettingsMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Debug" Height="23">
                <MenuItem Header="Get Status" x:Name="getStatusButton" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="Help" Height="23">
                <MenuItem Header="About..." Name="AboutMenuItem" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Height="303" VerticalAlignment="Top" Margin="0,28,0,0">
            <ComboBox x:Name="ControllerComboBox" Margin="0,0,100,0" VerticalAlignment="Top" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource deviceInstanceToStringConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="UseControllerButton" Content="Use" Margin="0,0,719,0" VerticalAlignment="Top" Height="22" Command="{Binding BindInput}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}" HorizontalAlignment="Right" Width="75" RenderTransformOrigin="0.182,3.471"/>
            <GroupBox Header="Status" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="Auto" Margin="10,40,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Mode" Grid.Column="0" Grid.Row="0" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
                    <Label Content="Battery voltage" Grid.Column="1" Grid.Row="0" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
                    <Label Content="{Binding ModeString}" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <Label Content="{Binding ModeDescriptionString}" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" FontSize="12" Foreground="#FFA4A4A4"/>
                    <Label Content="{Binding VoltageString}" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" FontSize="18"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Input" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Margin="10,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <!-- TODO: Bind all the stuff below when joystick data becomes available. -->
                    <Canvas HorizontalAlignment="Left" Grid.Column="0" Height="100" Margin="10,10,10,10" VerticalAlignment="Top" Width="100">
                        <Ellipse Height="100" Stroke="Black" Width="100"/>
                        <Polyline 
                          Points="10,10 0,20 10,30 20,20 10,10 10,0" 
                          Stroke="Blue" StrokeThickness="2"
                          RenderTransformOrigin="0.5,0.5" Canvas.Left="40" Canvas.Top="30">
                            <Polyline.RenderTransform>
                                <RotateTransform Angle="0" />
                            </Polyline.RenderTransform>
                        </Polyline>
                    </Canvas>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Label Content="Roll:"/>
                        <Label Content="Pitch:"/>
                        <Label Content="Yaw:"/>
                        <Label Content="Lift:"/>
                    </StackPanel>

                    <!-- TODO: Fix the sources of these bindings when joystick data becomes available. -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Label Content="{Binding RollString}"/>
                        <Label Content="{Binding PitchString}"/>
                        <Label Content="{Binding YawString}"/>
                        <Label Content="{Binding LiftString}"/>
                    </StackPanel>
                </Grid>

            </GroupBox>
        </StackPanel>

        <TextBox Name="DebugTraceTextBox" TextWrapping="Wrap" Margin="10,336,10,10" />
    </Grid>
</Window>
