<Window x:Class="ERTSDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERTSDashboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing" Initialized="Window_Initialized" PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <local:DeviceInstanceToStringConverter x:Key="deviceInstanceToStringConverter" />
    </Window.Resources>
    <Grid>
        <ComboBox x:Name="ControllerComboBox" Margin="10,10,90,0" VerticalAlignment="Top">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource deviceInstanceToStringConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="UseControllerButton" Content="Use" Margin="0,10,10,0" VerticalAlignment="Top" Height="22" Click="UseControllerButton_Click" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>
